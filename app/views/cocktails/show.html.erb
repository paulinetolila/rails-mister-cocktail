<h1>Cocktail <%= @cocktail.name.upcase %></h1>
<% @cocktail.doses.each do |dose| %>
<p> <%=  "#{dose.ingredient.name} - #{dose.description}" %> </p>
  <p><%= link_to "Delete",
              dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } %></p>
<% end %>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %> ||
<%= link_to "To Cocktails Menu", cocktails_path %>




